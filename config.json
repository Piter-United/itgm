                  "constant": "UserProfile"
                }
              }
            }
          }
        }
      }
    }
  },
  "entities": {
    "Community": {
      "attrs": {
        "name": {
          "type": "string",
          "isRequired": true
        },
        "owner": {
          "type": "Reference",
          "refers": ["User"],
          "isRequired": true
        },
        "logo": {
          "type": "string"
        },
        "social": {
          "isCollection": true,
          "attrs": {
            "icon": {
              "type": "string",
              "enum": [
                "global",
                "vk",
                "twitter",
                "youtube",
                "facebook",
                "github"
              ],
              "isRequired": true
            },
            "link": {
              "type": "string",
              "isRequired": true
            }
          }
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Activity": {
      "attrs": {
        "name": {
          "type": "string",
          "isRequired": true
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "isCollection": true,
          "type": "string"
        },
        "community": {
          "type": "Reference",
          "refers": ["Community"],
          "isRequired": true
        },
        "user": {
          "type": "Reference",
          "refers": ["User"],
          "isRequired": true
        },
        "active": {
          "type": "boolean"
        }
      }
    },
    "ActivityLike": {
      "attrs": {
        "activity": {
          "type": "Reference",
          "refers": ["Activity"],
          "isRequired": true
        },
        "user": {
          "type": "Reference",
          "refers": ["User"],
          "isRequired": true
        }
      }
    },
    "VerifiedUsers": {
      "attrs": {
        "user": {
          "type": "Reference",
          "refers": ["User"],
          "isRequired": true
        }
      }
    },
    "UserProfile": {
      "attrs": {
        "email": {
          "type": "string",
          "isRequired": true
        },
        "name": {
          "type": "string",
          "isRequired": true
        },
        "company": {
          "type": "string",
          "isRequired": true
        },
        "experience": {
          "type": "string",
          "isRequired": true
        },
        "specialization": {
          "type": "string",
          "isRequired": true
        },
        "phone": {
          "type": "string"
        },
        "about": {
          "type": "string"
        },
        "community": {
          "type": "Reference",
          "refers": ["Community"],
          "isRequired": true
        },
        "communities": {
          "type": "Reference",
          "isCollection": true,
          "refers": ["Community"]
        }
      }
    },
    "CommunityManager": {
      "attrs": {
        "community": {
          "type": "Reference",
          "refers": ["Community"],
          "isRequired": true
        },
        "user": {
          "type": "Reference",
          "refers": ["User"],
          "isRequired": true
        }
      }
    }
  }
}
